{
  "name": "catch-coin",
  "version": "1.8.0",
  "private": true,
  "workspaces": [
    "packages/frontend/app-mobile",
    "packages/frontend/app-web",
    "packages/frontend/tests",
    "packages/frontend/rules",
    "packages/backend/migrations",
    "packages/backend/rules",
    "packages/backend/server",
    "packages/backend/tests"
  ],
  "description": "This app is for my daughter to learn financial literacy",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "release:bootstrap": "node bin/bootstrap.js",
    "release:pr": "node bin/create-pr.js",
    "release:release": "node bin/github-release.js",
    "docker:start:dev": "NODE_ENV=development docker-compose up -d",
    "docker:start:stage": "NODE_ENV=stage docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:status": "docker-compose ps",
    "lint": "yarn workspaces foreach --all run lint",
    "lint:fix": "yarn workspaces foreach --all run lint:fix",
    "test": "yarn workspaces foreach --all run test",
    "test:unit": "yarn workspace @catch-coin/frontend-tests run test:unit",
    "test:e2e": "yarn workspace @catch-coin/frontend-tests run test:e2e",
    "frontend:mobile:dev:browser": "yarn workspace @catch-coin/frontend-mobile run dev:browser",
    "frontend:mobile:dev:ios": "yarn workspace @catch-coin/frontend-mobile run dev:ios",
    "frontend:mobile:build": "yarn workspace @catch-coin/frontend-mobile run ionic:build",
    "frontend:mobile:ionic:sync": "yarn workspace @catch-coin/frontend-mobile run ionic:sync",
    "frontend:mobile:ionic:add:ios": "yarn workspace @catch-coin/frontend-mobile run ionic:add:ios",
    "frontend:mobile:ionic:add:android": "yarn workspace @catch-coin/frontend-mobile run ionic:add:android",
    "frontend:mobile:dev:android": "yarn workspace @catch-coin/frontend-mobile run dev:android",
    "backend:server:dev": "yarn workspace @catch-coin/backend-server run dev",
    "backend:server:stage": "yarn workspace @catch-coin/backend-server run stage",
    "backend:tests": "yarn workspace @catch-coin/backend-tests run test",
    "backend:tests:coverage": "yarn workspace @catch-coin/backend-tests run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AvdienkoSergey/catch-coin.git"
  },
  "author": "AvdienkoSA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AvdienkoSergey/catch-coin/issues"
  },
  "homepage": "https://github.com/AvdienkoSergey/catch-coin#readme",
  "dependencies": {
    "release-please": "^17.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "dotenv": "^16.4.7"
  },
  "packageManager": "yarn@4.9.1"
}
