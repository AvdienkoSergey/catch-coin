{
  "name": "catch-coin",
  "version": "1.8.0",
  "private": true,
  "workspaces": [
    "packages/frontend/mobile",
    "packages/frontend/tests",
    "packages/frontend/rules",
    "packages/backend/migrations",
    "packages/backend/rules",
    "packages/backend/server",
    "packages/backend/tests"
  ],
  "description": "This app is for my daughter to learn financial literacy",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "release:bootstrap": "node bin/bootstrap.js",
    "release:pr": "node bin/create-pr.js",
    "release:release": "node bin/github-release.js",
    "frontend:tests:unit": "yarn workspace @catch-coin/frontend-tests run test:unit",
    "frontend:tests:e2e": "yarn workspace @catch-coin/frontend-tests run test:e2e",
    "frontend:lint": "yarn workspace @catch-coin/frontend-rules lint",
    "frontend:lint:fix": "yarn workspace @catch-coin/frontend-rules lint:fix",
    "frontend:format": "yarn workspace @catch-coin/frontend-rules format",
    "frontend:mobile:dev:browser": "yarn workspace @catch-coin/frontend-mobile run dev:browser",
    "frontend:mobile:dev:ios": "yarn workspace @catch-coin/frontend-mobile run dev:ios",
    "frontend:mobile:dev:android": "yarn workspace @catch-coin/frontend-mobile run dev:android",
    "backend:tests": "yarn workspace @catch-coin/backend-tests run test",
    "backend:tests:coverage": "yarn workspace @catch-coin/backend-tests run test:coverage",
    "backend:lint": "yarn workspace @catch-coin/backend-server lint",
    "backend:lint:fix": "yarn workspace @catch-coin/backend-server lint:fix",
    "backend:format": "yarn workspace @catch-coin/backend-server format",
    "backend:server:dev": "yarn workspace @catch-coin/backend-server run dev",
    "backend:server:stage": "yarn workspace @catch-coin/backend-server run stage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AvdienkoSergey/catch-coin.git"
  },
  "author": "AvdienkoSA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AvdienkoSergey/catch-coin/issues"
  },
  "homepage": "https://github.com/AvdienkoSergey/catch-coin#readme",
  "dependencies": {
    "release-please": "^17.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.2.5",
    "typescript": "~5.6.2"
  },
  "packageManager": "yarn@4.9.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "yarn frontend:lint:fix",
      "yarn frontend:format"
    ],
    "*.{css,scss,json,md}": [
      "yarn frontend:format"
    ]
  }
}
